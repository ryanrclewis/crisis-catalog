---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ChecklistWidget from '../components/ChecklistWidget';
import { generateContentVersion, exportChecklistsData } from '../data/generate-data';

// Generate the data at build time
const checklistsData = await exportChecklistsData();
const contentVersion = await generateContentVersion();

// Pass to client
const data = {
  ...checklistsData,
  version: contentVersion,
};
---

<Layout title="Emergency Preparedness Checklists">
  <div class="intro-section">
    <h2>Welcome to Crisis Catalog</h2>
    <p>
      As Catholic families, we are called to be good stewards of our resources and prudent in
      preparation for emergencies. This checklist helps you organize essential supplies across
      multiple scenarios: your home, a portable go-bag for evacuation, and your vehicle.
    </p>
    <p>
      Each item includes recommendations based on practical experience, estimated costs, and direct
      purchase links. Your selections are saved locally on your deviceâ€”no cloud storage or tracking.
    </p>
  </div>

  <ChecklistWidget client:load data={data} />
</Layout>

<style>
  .intro-section {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-xl);
    background: #fff;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .intro-section h2 {
    margin-top: 0;
    color: var(--color-primary);
    font-size: 1.75rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .intro-section p {
    color: var(--color-text);
    line-height: 1.6;
    margin: var(--spacing-md) 0;
    font-size: 1.0625rem;
  }

  @media (max-width: 768px) {
    .intro-section {
      padding: var(--spacing-lg);
      border-radius: 0;
    }

    .intro-section h2 {
      font-size: 1.5rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    .intro-section {
      background: #1c1c1e;
    }
  }
</style>
